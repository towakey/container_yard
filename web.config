<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <!-- 
            Mapping *.py to Python.exe
            NOTE: The scriptProcessor path must match your Python installation path.
            Common paths:
            - C:\Python39\python.exe
            - C:\Users\<User>\AppData\Local\Programs\Python\Python39\python.exe
            - C:\Windows\py.exe (if using Python Launcher)
            
            Adjust the 'scriptProcessor' attribute below if you get a 502 or 404 error on IIS.
            -->
            <add name="Python-CGI" path="*.py" verb="*" modules="CgiModule" scriptProcessor="C:\please\your\python\path\python.exe %s %s" resourceType="File" />
        </handlers>
        <defaultDocument>
            <files>
                <add value="index.py" />
            </files>
        </defaultDocument>
    </system.webServer>
</configuration>
